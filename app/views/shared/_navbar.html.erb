<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">

  <ul class="navbar-nav mr-auto">

    <%# if at the log in screen when logged out %>
    <% if user_signed_in?%>
    <li class="nav-item">
      <%= link_to root_path, class: "nav-link" do %>
      <i class="fa-solid fa-house"></i>
      <% end %>
    </li>

    <li class="nav-item dropdown avatarhead">
      <span class="user_name">Welcome <%=current_user.first_name%></span>
      <%= image_tag "https://i.ibb.co/H7QHQx7/IMG20221103100206.jpg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
      <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
        <%= link_to "View Spookings", spookings_path, class: "dropdown-item" %>
        <%= link_to "View Killers", killers_path, class: "dropdown-item" %>
        <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
      </div>
    </li>
    <% elsif current_page?(controller: 'devise/sessions', action: 'new')%>
    <%# else if on the login page have just the home button %>
    <li class="nav-item">
      <%= link_to root_path, class: "nav-link" do %>
        <i class="fa-solid fa-house"></i>
      <% end %>
    </li>
    <%# else just show the login and the home %>
    <% else%>
    <li class="nav-item">
      <%= link_to root_path, class: "nav-link" do %>
      <i class="fa-solid fa-house"></i>
      <% end %>
    </li>
    <li class="nav-item">
      <%= link_to "Log In",new_user_session_path %>
    </li>
    <% end %>
  </ul>
</div>
